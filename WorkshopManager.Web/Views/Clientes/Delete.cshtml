@model WorkshopManager.Domain.Entities.Cliente;

@{
    ViewData["Title"] = "Elimiar";
}


<h2>Eliminar Vehículo</h2>

<p>
    ¿Estás seguro de que deseas eliminar el Cliente?
    <strong>@Model.Nombre</strong>
    con telefono <strong>@Model.Telefono </strong>?
</p>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit"> Sí, eliminar </button>
    <a asp-action="Index">Cancelar</a>
</form>