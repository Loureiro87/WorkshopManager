@model WorkshopManager.Domain.Entities.Vehiculo;

<h2>Eliminar Vehículo</h2>

<p>
    ¿Estás seguro de que deseas eliminar el vehículo?
    <strong>@Model.Marca @Model.Modelo</strong>
    con matricula <strong>@Model.Matricula</strong>?
</p>

<form method="post">
    <input type="hidden" asp-for="Id"/>
    <button type="submit"> Sí, eliminar </button>
    <a asp-action="Index">Cancelar</a>
</form>