@model IEnumerable<WorkshopManager.Domain.Entities.Vehiculo>

@{
    ViewData["Title"] = "Vehículos";
}

<h1>Vehículos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo vehículo</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Matrícula</th>
            <th>Cliente</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehiculo in Model)
        {
            <tr>
                <td>@vehiculo.Marca</td>
                <td>@vehiculo.Modelo</td>
                <td>@vehiculo.Matricula</td>
                <td>@vehiculo.Cliente?.Nombre</td>
                <td><a asp-action="Edit" asp-route-id="@vehiculo.Id">Editar</a> | 
                    <a asp-action="Delete" asp-route-id="@vehiculo.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
